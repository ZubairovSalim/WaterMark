<Window x:Class="testA.watermark_Word"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:testA"
        mc:Ignorable="d"
        Title="watermark_Word" Height="343.19" Width="300">
    <StackPanel Orientation="Vertical">
        <Button x:Name="btn_AddWatermark" Click="btn_AddWatermark_Click">Добавить водяной знак</Button>
        <Label HorizontalAlignment="Center">Цифровой водяной знак:</Label>
        <Image x:Name="img_Watermark" Height="150" Visibility="Visible"></Image>
        <Button x:Name="btn_AddDocument" Click="btn_AddDocument_Click">Добавить документ</Button>
        <Label x:Name="lb_Document" HorizontalAlignment="Center" Height="35" Width="292"/>
        <Button x:Name="btn_Impose" Click="btn_Impose_Click">Наложить</Button>
        <Button x:Name="btn_SaveDocument" Click="btn_SaveDocument_Click">Сохранить документ</Button>
    </StackPanel>
</Window>
